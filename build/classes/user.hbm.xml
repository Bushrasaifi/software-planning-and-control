<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="Pojo.user" table="user">
		<id name="uid" type="int" column="uid">
			<generator class="increment"></generator>
		</id>
		<property name="uname" column="name"></property>		
		<property name="uUsername" column="username"></property>
		<property name="uemail" column="email"></property>
	<property name="dob" column="dob"></property>
	<property name="uaddress" column="address"></property>
	<property name="upass" column="password"></property>
	<property name="ucity" column="city"></property>
	
	</class>
</hibernate-mapping>